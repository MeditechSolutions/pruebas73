        <record id="view_einvoice_18_tree" model="ir.ui.view">
            <field name="name">Códigos de Modalidad de Traslado</field>
            <field name="model">einvoice.18</field>
            <field name="arch" type="xml">
                <tree string="Códigos de Tipo de Afectación del IGV">
