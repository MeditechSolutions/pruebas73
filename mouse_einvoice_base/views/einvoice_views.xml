                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_einvoice_18_form" model="ir.ui.view">
            <field name="name">Códigos de Modalidad de Traslado</field>
            <field name="model">einvoice.18</field>
            <field name="arch" type="xml">
                <form string="Códigos de Modalidad de Traslado">
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="einvoice_18_action">
            <field name="name">Códigos de Modalidad de Traslado</field>
            <field name="res_model">einvoice.18</field>
